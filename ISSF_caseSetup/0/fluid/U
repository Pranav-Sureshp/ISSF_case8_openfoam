FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/fluid";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

uinlet         0.03 ;
internalField   uniform ($uinlet 0 0);

boundaryField
{
     fluid_inlet
    {
        type            fixedValue;
        value           uniform ($uinlet 0 0) ;
    }
    fluid_outlet
    {   
        type            zeroGradient;
    }
    fluid_to_solid
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


